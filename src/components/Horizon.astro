---
import type { HorizonProps } from '../types/HeaderProps';
import trees from "../assets/landscape/trees.webp";

interface Props extends HorizonProps {}

const {
  horizon_height = "450px",
  visual_image = "",
  visual_alt_text = "",
  visual_classes = "",
  visual_width = "600px",
} = Astro.props;
---

<div class="horizon-container" style={`min-height: ${horizon_height}`}>
  {visual_image && (
    <img
      src={visual_image}
      alt={visual_alt_text}
      class={`center_image ${visual_classes}`}
      width={visual_width}
      draggable="false"
    />
  )}
  <img src={trees.src} alt="Trees" class="trees" />
</div>

<style>
  .horizon-container {
    @apply w-full min-h-[250px] relative mix-blend-multiply;
  }
  .center_image {
    @apply mx-auto z-[1] relative;
  }
  .trees {
    @apply absolute bottom-0 left-0 animate-fade-in;
  }
</style>
