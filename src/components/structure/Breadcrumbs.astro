---
interface Crumb {
  text: string;
  href: string;
  showArrow?: boolean;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;
---

<nav class="breadcrumbs px-10 max-3xl:px-0">
  {
    crumbs.map((crumb) => (
      <a href={crumb.href} class="crumb">
        {crumb.showArrow && <span class="arrow">‚Üê</span>}
        <span class="label">{crumb.text}</span>
      </a>
    ))
  }
</nav>

<style>
  .breadcrumbs {
    @apply flex items-center gap-2;
  }

  .crumb {
    @apply flex items-center gap-2 text-ink-secondary hover:text-ink-primary transition-all;

    &:hover span.label {
      @apply underline underline-offset-4;
    }
  }

  .arrow {
    @apply text-orange-500;
  }
</style>
