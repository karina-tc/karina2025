<div class="hover-card">
  <div class="hover-card--content">
    <slot />
  </div>
  <div class="hover-card--popup">
    <slot name="popup" />
  </div>
</div>

<style>
  .hover-card {
    @apply relative;
  }

  .hover-card--popup {
    @apply bg-[#191408] text-white text-sm rounded-lg shadow-lg p-3 absolute z-10 invisible opacity-0;
    @apply -translate-y-1 transition-all duration-200 w-56 text-center bottom-full left-1/2 -translate-x-1/2 mb-2;
  }

  .hover-card:hover .hover-card--popup {
    @apply visible opacity-100 -translate-y-0;
  }
</style> 