---
interface Props {
  eyebrow: string;
  title: string;
  description?: string;
}

const { eyebrow, title, description } = Astro.props;
---

<div class="flex flex-col gap-8 items-center text-center">
  <h3>{eyebrow}</h3>
  <h2 class="max-w-lg">
    {title}
  </h2>
  {description && <p class="text-stone-600 text-base">{description}</p>}
</div> 