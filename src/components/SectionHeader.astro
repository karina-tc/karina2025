---
interface Props {
  eyebrow: string;
  title: string;
  description?: string;
  descriptionAlign?: 'center' | 'left';
}

const { eyebrow, title, description, descriptionAlign = 'center' } = Astro.props;
---

<div class="flex flex-col gap-8 items-center text-center">
  <h3>{eyebrow}</h3>
  <h2 class="max-w-lg">
    {title}
  </h2>
  {description && <p class={`text-ink-secondary text-base text-${descriptionAlign}`}>{description}</p>}
  <slot name="section-header-content" />
</div> 
