---
import Sun from 'phosphor-astro/Sun.astro'
import Moon from 'phosphor-astro/Moon.astro'

const { 
  greeting_time = 'morning',
} = Astro.props;
---

<div class="greeting-container">
  <div class="icon-container">
    {
      greeting_time === 'morning' || greeting_time === 'afternoon' 
      ? <Sun class="w-4 h-4" /> 
      : <Moon class="w-4 h-4" />
    }
  </div>
	<span class="text-base leading-6 m-auto w-fit">
    {greeting_time === 'morning' 
    ? 'Morning, sunshine!' 
    : greeting_time === 'afternoon' 
    ? 'Afternoon, friend!' 
    : 'Hello, night owl!'}
  </span>
</div>

<style>
  .greeting-container {
    @apply flex flex-row items-center justify-center gap-3 text-base leading-6;
  }
  .icon-container {
    @apply flex flex-row items-center justify-center h-10 w-10 bg-white/90 rounded-full shadow-md;
  }
</style>
