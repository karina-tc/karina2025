<style>
  /* Writing list */

  .writing-list-header {
    @apply flex justify-between font-mono uppercase text-xs text-neutral-500 border-b border-neutral-200 py-4 sticky top-0 bg-paper-base z-20;
  }

  .writing-list {
    @apply space-y-3 mt-2 relative;
  }

  .writing-item {
    @apply flex items-center justify-between py-3 -mx-3 px-3 rounded-lg;
  }

  .writing-title {
    @apply text-neutral-900 z-10 group-hover:text-purple-800 transition-colors;
  }

  .writing-date {
    @apply text-neutral-500 text-sm z-10 group-hover:text-purple-800 transition-colors;
  }

  .writing-hover-overlay {
    @apply absolute inset-0 bg-[#cab9ff]/25 w-0 opacity-0 group-hover:w-full group-hover:opacity-100 transition-all;
  }
</style>
