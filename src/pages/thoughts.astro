<style>
  /* Writing list */

  .writing-list-header {
    @apply flex justify-between font-mono uppercase text-xs text-neutral-500 py-4 bg-paper-base;
  }

  .writing-list {
    @apply space-y-3 mt-2 relative;
  }

  .writing-item {
    @apply flex items-center gap-4 py-3 -mx-3 px-3 rounded-lg;
  }

  .writing-title {
    @apply text-neutral-900 z-[1] shrink-0;
  }

  .writing-dots {
    @apply grow border-b border-dotted border-neutral-300 h-3 z-10;
  }

  .writing-date {
    @apply text-neutral-500 text-sm z-[1] shrink-0;
  }

  .writing-hover-overlay {
    @apply absolute inset-0 bg-green-500/10 w-0 opacity-0 group-hover:w-full group-hover:opacity-100 transition-all;
  }
</style>
