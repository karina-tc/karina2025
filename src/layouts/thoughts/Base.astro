---
import Template from "./Template.astro";

interface Props {
  pageTitle?: string;
  pageDescription?: string;
  title: string;
  date: string;
  readingTime: number;
  showcase?: string;
  categories?: string[];
}

const { 
  pageTitle,
  pageDescription,
  title,
  date,
  readingTime,
  showcase,
  categories = [],
} = Astro.props;
---

<Template
  title={pageTitle || title}
  description={pageDescription}
  date={date}
  readingTime={readingTime}
  showcase={showcase}
  categories={categories}
  source="notion"
>
  <slot />
</Template>
